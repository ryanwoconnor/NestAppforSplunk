<form>
  <label>Nest</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="location" searchWhenChanged="true">
      <label>Location</label>
      <selectFirstChoice>true</selectFirstChoice>
      <search>
        <query>|inputlookup device_id_lookup | table name | dedup name</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <fieldForLabel>name</fieldForLabel>
      <fieldForValue>name</fieldForValue>
    </input>
    <input type="radio" token="units">
      <label>Temperature Units</label>
      <choice value="f">Fahrenheit</choice>
      <choice value="c">Celcius</choice>
      <default>f</default>
      <initialValue>f</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Current Temperature Outside</title>
        <search>
          <query>sourcetype=nest_devices index=nest name=$location$  | mvexpand city| map search="search index=* city=$$city$$ temp_f=*" | eval temp=case(LIKE("$units$","c"), (temp_f -32)/1.8, LIKE("$units$","f"), temp_f)  | timechart cont=FALSE span=5m first(temp)</query>
          <earliest>-4h@m</earliest>
          <latest>now</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="unitPosition">after</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Current Temperature Inside</title>
        <search>
          <query>sourcetype=nest_devices name=$location$ index=nest  | mvexpand thermostats_id|map search="search index=nest  | spath path=data.devices.thermostats.$$thermostats_id$$ output=new" | spath input=new |  search name=$location$ |  table _time ambient_temperature_f  | eval "Current Temperature"=case(LIKE("$units$","c"), (ambient_temperature_f -32)/1.8, LIKE("$units$","f"), ambient_temperature_f)  | timechart cont=FALSE span=5m first("Current Temperature")</query>
          <earliest>-4h@m</earliest>
          <latest>now</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">none</option>
        <option name="unitPosition">after</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="trendInterval">-1h</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Smoke Alarm Battery Health</title>
        <search>
          <query>sourcetype=nest_devices name=$location$ index=nest | mvexpand smoke_co_alarms_id| map search="search index=nest sourcetype=$$sourcetype$$ | spath path=data.devices.smoke_co_alarms.$$smoke_co_alarms_id$$ output=new" | spath input=new  | search name=$location$ | table battery_health | head 1 | eval alert_level =case(battery_health=="ok",1,1=1,2) | rangemap field=alert_level low=1-1 severe=2-2</query>
          <earliest>-4h@m</earliest>
          <latest>now</latest>
        </search>
        <option name="wrap">undefined</option>
        <option name="rowNumbers">undefined</option>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
        <option name="unitPosition">after</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Time At Home vs Away</title>
        <search>
          <query>sourcetype=nest_devices name=$location$ index=* | map search="search index=nest sourcetype=$$sourcetype$$ source=$$source$$| spath path=data.structures.$$structure_id$$ output=new" | spath input=new | search name=$location$| table _time source away | bucket _time span=1m | dedup away _time | timechart span=1m count by away | search home=1 OR away=1</query>
          <earliest>-4h@m</earliest>
          <latest>now</latest>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">true</option>
        <option name="showTrendIndicator">true</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">false</option>
        <option name="useThousandSeparators">true</option>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">area</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <title>Number of Devices</title>
      <table>
        <search>
          <query>index=nest name=$location$ | table name smoke_co_alarms_id thermostats_id | dedup name | rename thermostats_id as "Thermostat ID" smoke_co_alarms_id as "Smoke/CO alarm ID" | fillnull value="" "Smoke/CO alarm ID" "Thermostat ID" |mvexpand "Thermostat ID" |mvexpand "Smoke/CO alarm ID" | mvexpand name |dedup "Thermostat ID" "Smoke/CO alarm ID" |  mvexpand "Thermostat ID" |mvexpand "Smoke/CO alarm ID" | mvexpand name |dedup "Thermostat ID" "Smoke/CO alarm ID" | stats dc("Thermostat ID") dc("Smoke/CO alarm ID") by name | rename "dc(Smoke/CO alarm ID)" as "Smoke Alarms" "dc(Thermostat ID)" as "Thermostats"</query>
          <earliest>-4h@m</earliest>
          <latest>now</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
</form>
